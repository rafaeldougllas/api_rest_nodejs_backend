            android:text="Data: " />

        <TextView
            android:id="@+id/item_lista_usuario_textView_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="27/05/2017" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
